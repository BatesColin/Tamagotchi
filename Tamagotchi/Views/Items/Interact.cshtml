  <button type="submit" name="button">Feed</button>
</form>
<form action="/items/sleep" method="post">
  <button type="submit" name="button">Put To Sleep</button>
</form>
<form action="/items/play" method="post">
  <button type="submit" name="button">Play With</button>
</form>
